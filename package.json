{
  "name": "react-typescript-template",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "10.x.x",
    "node": "20.x.x"
  },
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "classnames": "^2.3.2",
