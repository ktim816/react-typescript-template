{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],

      "@context": ["context"],
      "@context/*": ["context/*"],

      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],

      "@hoc": ["hoc"],
      "@hoc/*": ["hoc/*"],

      "@interfaces": ["interfaces"],
      "@interfaces/*": ["interfaces/*"],

      "@constants": ["constants"],
      "@constants/*": ["constants/*"],

      "@styles": ["styles"],
      "@styles/*": ["styles/*"],

      "@icons": ["assets/icons"],
      "@icons/*": ["assets/icons/*"],

      "@images": ["assets/images"],
      "@images/*": ["assets/images/*"],

      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"]
    }
  }
}
